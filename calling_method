let counter1 = {
  value:0,
  increase: function(){
    this.value++ //메소드 호출을 할경우 this는 counter1을 가리킨다.
  },
  decrease: function(){
    this.value--
  },
  getValue: function(){
    return this.value
  }
}

counter1.increase()
console.log(counter1.getValue())
counter1.increase()
console.log(counter1.getValue())
counter1.increase()
console.log(counter1.getValue())
counter1.decrease()
console.log(counter1.getValue())
// console.log(counter1.value)